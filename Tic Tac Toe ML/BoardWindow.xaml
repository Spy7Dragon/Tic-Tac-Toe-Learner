<Window x:Class="Tic_Tac_Toe_ML.BoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tic_Tac_Toe_ML"
        mc:Ignorable="d"
        Title="BoardWindow" Height="350" Width="525"
        ContentRendered="Window_ContentRendered">
    <Grid Name="Board">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Name="TopLeft" Grid.Row="0" Grid.Column="0"/>
        <Button Name="TopMiddle" Grid.Row="0" Grid.Column="1"/>
        <Button Name="TopRight" Grid.Row="0" Grid.Column="2"/>
        <Button Name="MiddleLeft" Grid.Row="1" Grid.Column="0"/>
        <Button Name="Center" Grid.Row="1" Grid.Column="1"/>
        <Button Name="MiddleRight" Grid.Row="1" Grid.Column="2"/>
        <Button Name="BottomLeft" Grid.Row="2" Grid.Column="0"/>
        <Button Name="BottomMiddle" Grid.Row="2" Grid.Column="1"/>
        <Button Name="BottomRight" Grid.Row="2" Grid.Column="2"/>
    </Grid>
</Window>
